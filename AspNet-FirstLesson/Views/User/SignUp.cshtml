@using AspNet_FirstLesson.ViewModels;
@model RegistrationViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/AddForm.css" rel="stylesheet" />
    <title>SignUp</title>
</head>
<body>
    <div class="contentDiv">
        <div><h1>Регистрация</h1></div>
        <form method="post" action="/User/SignUp">
            <div class="form-group">
                <label for="exampleInputEmail1">Логин</label><br />
                <input name="Username" class="form-control" placeholder="Login"><br />
                @Html.ValidationMessageFor(model => model.Username)
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Почта</label><br />
                <input name="Email" class="form-control" placeholder="E-mail"><br />
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Пароль</label><br />
                <input name="Password" class="form-control" type="password" placeholder="Password"><br />
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Повторите пароль</label><br />
                <input name="PasswordConfirm" class="form-control" type="password" placeholder="Password"><br />
                @Html.ValidationMessageFor(model => model.PasswordConfirm)
            </div>
            <div class="form-group">
                <label for="exampleInputCountry1">Страна проживания</label><br />
                <input name="Country" class="form-control" placeholder="Country"><br />
                @Html.ValidationMessageFor(model => model.Country)
            </div>
            <div class="form-group">
                <label for="exampleInputBirthDate1">Дата рождения</label><br />
                <input name="BirthDate" type="date" class="form-control"><br />
                @Html.ValidationMessageFor(model => model.Country)
            </div>
            <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        </form>
    </div>
</body>
</html>
