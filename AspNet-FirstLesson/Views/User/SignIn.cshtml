@using AspNet_FirstLesson.ViewModels;
@model LoginViewModel
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/AddForm.css" rel="stylesheet" />
    <title>SignIn</title>
</head>
<body>
    <div class="contentDiv">
        <h2>Войти</h2>
        <form method="post" action="/User/SignIn">
            <div class="form-group">
                <label for="exampleInputEmail1">Логин</label><br />
                <input name="Username" class="form-control" placeholder="UserName"><br />
                @Html.ValidationMessageFor(model => model.Username)
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Пароль</label><br />
                <input name="Password" type="password" class="form-control" placeholder="Password"><br />
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <button type="submit" class="btn btn-primary">Войти</button>
        </form>
        <a class="SignInA" href="~/User/SignUp/">Зарегистрироваться</a>
    </div>
</body>
</html>
